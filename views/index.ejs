        <div class="container">
            <div class="add-products">
                <h1>Ingrese Productos</h1>
                <form class="form" id="datosProductos" action="post" method="">
                        <input placeholder="Nombre" id="nombreProducto" type="text" name="name" required
                            >
                        <input placeholder="Precio" id="precioProducto" name="price" type="number" name="price" required
                            >
                        <input placeholder="Imagen" id="imgProducto" type="text" name="img" required
                             >
                    <button type="submit">Enviar</button>
                </form>
            </div>
            <%- include("./partials/tablaProductos.ejs")%>
            <%- include("./partials/chat.ejs")%>
        </div>
